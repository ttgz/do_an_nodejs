<!DOCTYPE html>
<html>
  <style>
    #email{
      margin-left: 25px;
    }
    #tieude{
      margin-left: 15px;
    }
    #message{
      width: 100%;
    }
  </style>
<head>
  <title> <% if(locals.title) {%>
                <%= title %>
         <% } %>
 </title>
<%- include('layout_user/header.ejs') %>
<%- include(content) %>
<form action="/contact" method="post" id="lienheForm">
  <div class="popup" id="popup">
    <h2>Liên hệ với chúng tôi</h2>
    <div class="form-group">
      <label for="name">Họ và tên:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="tieude">Tiêu đề:</label>
      <input type="text" id="tieude" name="tieude" required>
    </div>
    <div class="form-group">
      <label for="message">Nội dung:</label>
      <textarea id="message" name="message" rows="5" required></textarea>
    </div>
    <div class="button-group">
      <button type="submit" style="padding: 3px 30px; background-color: blue; color: white; border-radius: 5px;">Gửi</button>
      <button type="button" id="closeButton">Đóng</button>
    </div>
  </div>
</form>  
<%- include('layout_user/footer.ejs') %>


