<style>
  .popup {
  display:none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 20px;
  border: 1px solid #ccc;
  z-index: 1000; /* Đảm bảo popup hiển thị trên các phần tử khác */
  }
  .popup.show {
  display: block;
  }

  #closeButton {
  float: right;
  cursor: pointer;
  }
  .show{
  display:block;
  }
</style>
<script>
  const contactButton = document.getElementById('contactButton');
  contactButton.addEventListener('click', () => {
      const contact = document.getElementById('popup');
      contact.classList.add('show');
  });
  const closeButton = document.getElementById('closeButton');
  closeButton.addEventListener('click', () => {
    const contact = document.getElementById('popup');
    contact.classList.remove('show');
  });
</script>
</head>
<body>
<div id="preloader">
  <div id="status">&nbsp;</div>
</div>
<a class="scrollToTop" href="#"><i class="fa fa-angle-up"></i></a>
<div class="container">
  <header id="header">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header_top">
          <div class="header_top_left">
            <nav>
              <a href="/">Trang chu</a>
              <a href="/list">Danh Sach</a>
              <a href="#" id="contactButton">Liên hệ</a>
              <form action="#" style="text-align: right">
                  <select id="categoryFilter">
                      <option value="">Tất cả danh mục</option>
                      <option value="Tin tức">Tin tức</option>
                      <option value="Sự kiện">Sự kiện</option>
                    </select>
                  <input type="search" placeholder="Nhập từ khóa tìm kiếm" id="searchInput">
                  <button type="submit"><span>Tìm kiếm</span></button>
              </form>
          </nav>
              <div class="popup" id="popup">
                  <h2>Liên hệ với chúng tôi</h2>
                  <form action="#">
                    <div>
                      <label for="name">Họ và tên:</label>
                      <input type="text" id="name" name="name" required>
                    </div>
                    <div>
                      <label for="email">Email:</label>
                      <input type="email" id="email" name="email" required>
                    </div>
                    <div>
                      <label for="message">Nội dung:</label>
                      <textarea id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit">Gửi</button>
                  </form>
                <button id="closeButton">Đóng</button>
              </div>
          </div>
          <div class="header_top_right">
            <p>Friday, December 05, 2045</p>
          </div>
        </div>
      </div>