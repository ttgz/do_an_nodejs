<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/wow.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<script src="/javascripts/slick.min.js"></script>
<script src="/javascripts/jquery.li-scroller.1.0.js"></script>
<script src="/javascripts/jquery.newsTicker.min.js"></script>
<script src="/javascripts/jquery.fancybox.pack.js"></script>
<script src="/javascripts/custom.js"></script>
<script>
  const signupForm = document.getElementById('signupForm');

  signupForm.addEventListener('submit', (event) => {
    event.preventDefault();

    const emailDangKi = document.getElementById('emailDangKi').value;

    fetch('/dangki', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({emailDangKi})
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        alert('Đăng ký thành công!');
      } else {
        alert('Đăng ký thất bại!');
      }
    });
  });
</script>
<script>
  const contactButton = document.getElementById('contactButton');
    contactButton.addEventListener('click', () => {
        const contact = document.getElementById('popup');
        contact.classList.add('show');
    });
        let closeButton = document.getElementById('closeButton');
        closeButton.addEventListener('click', () => {
        const contact = document.getElementById('popup');
        contact.classList.remove('show');
      });
</script>
<script>
        const loginButton = document.getElementById('loginButton');
        loginButton.addEventListener('click', () => {
        const login = document.getElementById('popupLogin');
        login.classList.add('show');
    });
        let closeButtonLogin = document.getElementById('closeButtonLogin');
        closeButtonLogin.addEventListener('click', () => {
        const login = document.getElementById('popupLogin');
        login.classList.remove('show');
      });
</script>
</body>
</html>