  <div class="footer_top">
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="footer_widget wow fadeInLeftBig">
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="footer_widget wow fadeInDown">
          <h2>Thông tin liên hệ</h2>
          <% if(locals.footer) {%>
            <ul class="tag_nav">
              <% for(dataFooter of footer) {%>
              <li><a href=""> <i class="fas fa-map-marker-alt"></i> <%= dataFooter.dia_chi %> </a></li>
              <li><a href="mailto:  <%= dataFooter.email %>"> <i class="fas fa-envelope"></i> <%= dataFooter.email %> </a></li>
